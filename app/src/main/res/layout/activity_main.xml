<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Добро пожаловать!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Регистрация"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <EditText
        android:id="@+id/edText1"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:layout_marginTop="72dp"
        android:hint="Введите email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text2" />

    <EditText
        android:id="@+id/edText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Повторите пароль"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/edText2"
        app:layout_constraintRight_toRightOf="@id/edText2"
        app:layout_constraintTop_toTopOf="@id/edText2" />

    <EditText
        android:id="@+id/edText2"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:hint="Введите пароль"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/edText1"
        app:layout_constraintRight_toRightOf="@id/edText1"
        app:layout_constraintTop_toTopOf="@id/edText1" />


    <Button
        android:id="@+id/button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Зарегистрироваться"
        android:layout_marginTop="148sp"
        app:layout_constraintLeft_toLeftOf="@id/edText3"
        app:layout_constraintRight_toRightOf="@id/edText3"
        app:layout_constraintTop_toTopOf="@id/edText3" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginTop="14sp"
        android:textSize="13sp"
        android:text="По Email"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/edText1"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edText1"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:textSize="13sp"
        android:layout_marginTop="14sp"
        android:text="По Номеру"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/edText1"
        app:layout_constraintEnd_toEndOf="@+id/edText1"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

</androidx.constraintlayout.widget.ConstraintLayout>